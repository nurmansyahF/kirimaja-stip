                    .ic-free-ongkir
    .message-box.alert.absolute.w-close
      .icon.icon_alert
      .text
        p Silahkan pilih varian terlebih dahulu sebelum menambahkan ke keranjang
      a.close(href='#')
        .icon.icon_close
    .add_cart-wrap
      a.add_cart(href="#modalCart" data-toggle="modal")
        span.text + &nbsp; Tambah ke keranjang
        span.price Rp 157.000

block modal
  .modal.modalCart(id="modalCart" tabindex="-1")
    .modal-dialog.modal-dialog-centered.modal-lg
      .modal-content
        .modal-header
          .btn-close(href="#" data-dismiss="modal" aria-label="close")
            img(src="images/ic-close-black.svg")
        .modal-body
          .img-cart
            img(src="images/img-cart-modal.svg", alt="img")
          h3 Berhasil menambahkan menu ini ke dalam keranjang pesanan
          a.btn.btn_primary.btn_block(href="cart.html")
            i.icon.icon_bag
            span Lihat keranjang
          a.btn.btn_border.btn_block(href="home.html")
            i.icon.icon_menu
            span Order menu makanan lain

