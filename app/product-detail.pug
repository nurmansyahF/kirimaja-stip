extends templates/layout.pug

block vars
  - var activepage = "product-detail";


block content
  .product_detail
    section.product_detail-img
      .slider-prdct.owl-carousel
        .box-img
          img(src="images/img-product-detail-1.png", alt="img")
        .box-img
          img(src="images/img-product-detail-1.png", alt="img")
        .box-img
          img(src="images/img-product-detail-1.png", alt="img")
      #counter.counter

    section.product_detail-item
      .container
        .description
          .locality Makanan khas Palembang
          h1.name Pempek Palembang Cak Molek
          .description
            p Pempek adalah salah satu makanan tradisional khas Palembang. Makanan yang diolah dari Ikan dan Sagu ini bisa dengan sangat mudah ditemukan di Kota Palembang.
        .variants
          h4 Opsi varian/ukuran
          .variants_wrap
            a.variants-item.active(href="product-detail.html")
              .variants-thumb
                img(src="images/thumb-variant.png", alt="img")
              .variants-name Mini
            a.variants-item(href="product-detail.html")
              .variants-thumb
                img(src="images/thumb-variant.png", alt="img")
              .variants-name Sedang
            a.variants-item(href="product-detail.html")
              .variants-thumb
                img(src="images/thumb-variant.png", alt="img")
              .variants-name Jumbo
            a.variants-item(href="product-detail.html")
              .variants-thumb
                img(src="images/thumb-variant.png", alt="img")
              .variants-name Jumbo
        .quantity
          h4 Jumlah pesanan
          .form-group.qty
            a.btn-number.min(href="#" data-type="minus" data-field="quant[1]" disabled="disabled") -
            input.type-hidden(type="hidden" name="size" value="1")
            input.form-control.input-number(type="number" placeholder="" name="quant[1]" value="1" min="1" max="20")
            a.btn-number.plus(href="#" data-type="plus" data-field="quant[1]") +

      .product_detail-more
        .container
          h3 Makanan khas Palembang lainnya
          .product_wrap.row
            .col-6
              .product_card
                .box-img
                  a(href="product-detail.html")
                    img(src="images/img-product-3.png", alt="img")
                .box-text
                  h4
                    a(href="product-detail.html") Semur Sapi Khas Palembang Aline Box
                  .price
                    span Rp 92.000
                  .boxic-promo
                    .ic-free-ongkir
